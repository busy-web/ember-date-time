
<div class="main-container">
	<div class="input-container{{if activeState.isOpen ' active'}}" {{action 'focusInput' ''}}>
		{{#if activeState.showDate}}
			<div class="input-in-date">
				<div class="section month">
					{{input class="month" maxlength="2" value=timestampMonths key-up=(action 'keyReleased') key-down=(action 'keyUpDownHandler' 'months') focus-in=(action 'focusInput' 'month') click=(action 'focusInput' 'month' bubbles=false)}}
				</div>

				<div class="slash" {{action 'focusInput' 'month' bubbles=false}}>/</div>

				<div class="section day">
					{{input class="day" maxlength="2" value=timestampDays key-up=(action 'keyReleased') key-down=(action 'keyUpDownHandler' 'days') focus-in=(action 'focusInput' 'day') click=(action 'focusInput' 'day' bubbles=false)}}
				</div>

				<div class="slash" {{action 'focusInput' 'day' bubbles=false}}>/</div>

				<div class="section year">
					{{input class="year" maxlength="4" value=timestampYears key-up=(action 'keyReleased') key-down=(action 'keyUpDownHandler' 'years') focus-in=(action 'focusInput' 'year') click=(action 'focusInput' 'year' bubbles=false)}}
				</div>
			</div>
		{{/if}}

		{{#if activeState.showTime}}
			<div class="input-in-time">
				<div class="section hour">
					{{input class="hour" maxlength="2" value=timestampHours key-up=(action 'keyReleased') key-down=(action 'keyUpDownHours') focus-in=(action 'focusInput' 'hour') click=(action 'focusInput' 'hour' bubbles=false)}}
				</div>

				<div class="colon">:</div>

				<div class="section minute">
					{{input class="minute" maxlength="2" value=timestampMinutes key-up=(action 'keyReleased') key-down=(action 'keyUpDownMinutes') focus-in=(action 'focusInput' 'minute') click=(action 'focusInput' 'minute' bubbles=false)}}
				</div>

				<div class="section meridian">
					{{input class="am-pm" maxlength="2" value=timestampMeridian key-up=(action 'keyReleased') key-down=(action 'meridianKeyHandler') focus-in=(action 'focusInput' 'meridian') click=(action 'focusInput' 'meridian' bubbles=false)}}
				</div>
			</div>
		{{/if}}
	</div>

	<div class="dialog-container{{if activeState.isOpen ' show'}}{{if activeState.isTop ' top'}}">
		{{#if activeState.isOpen}}
			{{interfaces/combined-picker paperDate=paper activeState=activeState onClose=(action 'closeAction') onUpdate=(action 'update') onChange=(action 'change')}}
		{{/if}}
	</div>
</div>
